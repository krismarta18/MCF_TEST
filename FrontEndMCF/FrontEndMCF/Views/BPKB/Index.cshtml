@model FrontEndMCF.Models.BPKBViewModel

<style>
    .vertical-line {
        border-left: 1px solid #ddd;
        height: 100%;
    }
</style>
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-5"> <strong>Input Data BPKB</strong> </h1>
                                </div>
                                <form asp-action="SubmitData" class="user">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Agreement Number</label>
                                            <input type="text" asp-for="AGREEMENT_NUMBER" class="form-control form-control" id="input1" placeholder="Input Agreement Number">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Branch ID</label>
                                            <input type="text" asp-for="BRANCH_ID" class="form-control form-control" id="input2" placeholder="Input Branch ID">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>No BPKB</label>
                                            <input type="text" asp-for="BPKB_NO" class="form-control form-control" id="input3" placeholder="Input No BPKB">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Tanggal BPKB IN</label>
                                            <input type="text" asp-for="BPKB_DATE_IN" class="form-control form-control" id="datepickerbpkbin" readonly placeholder="Input Tanggal BPKB IN">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Tanggal BPKB</label>
                                            <input type="text" asp-for="BPKB_DATE" class="form-control form-control" id="datepickerbpkb" readonly placeholder="Input Tanggal BPKB">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>No Faktur</label>
                                            <input type="text" asp-for="FAKTUR_NO" class="form-control form-control" id="input6" placeholder="Input No Faktur">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Tanggal Faktur</label>
                                            <input type="text" asp-for="FAKTUR_DATE" class="form-control form-control" readonly id="datepickerfaktur" placeholder="Input Tanggal Faktur">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Nomor Polisi</label>
                                            <input type="text" asp-for="POLICE_NO" class="form-control form-control" id="input8" placeholder="Input Nomor Polisi">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Lokasi Penyimpanan</label>
                                            @if (TempData["DropdownItems"] != null)
                                            {
                                                var dropdownItems = TempData["DropdownItems"] as List<ResDropdown>;
                                                <select class="form-control" asp-for="LOCATION_ID">
                                                    @foreach (var item in dropdownItems)
                                                    {
                                                        <option value="@item.ID">@item.DESCRIPTION</option>
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <p>Gagal Load Ke Service, Coba Lagi...</p>
                                            }

                                        </div>
                                        
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <a href="@Url.Action("ListData", "BPKB")" class="btn btn-secondary btn-user btn-block">
                                                Kembali
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="submit" class="btn btn-primary  btn-user btn-block">Simpan</button>
                                        </div>
                                    </div>
                                </form>
                                <hr>
                                
                                <p>MCF Technical Test</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>